<h1 class="">Stories</h1>
<div class="row">
    <%if(story.length==0){%>
        <p>No stories to display</p>
        <%}else{%>
                <div class="container">
                    <div class="card">
                        <div class="card-image">
                            <!-- To do icon -->
                        </div>
                        <div class="card-content center-align">
                            <h5>
                                <%=story.title%>
                            </h5>
                            <p>
                                <%=stripTags(story.body)%>
                            </p>
                            <br>
                            <div class="chip">
                                <img src=<%=story.user.image%> alt="">
                                <a href="/stories/user/<%=story.user._id%>"><%=story.user.displayName%></a>
                            </div>
                        </div>
                    </div>
                </div>
            <%}%>
</div>